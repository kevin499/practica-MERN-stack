<script src="https://cdn.socket.io/3.1.3/socket.io.min.js"
    integrity="sha384-cPwlPLvBTa3sKAgddT6krw0cJat7egBga3DJepJyrLl4Q9/5WLra3rrnMcyTyOnh"
    crossorigin="anonymous"></script>


<script>

    const socket = io("http://localhost:8081");

    socket.on('actualizarProductos', (productos) => {

        const tabla_productos = document.querySelector('#tabla_productos')
        tabla_productos.innerHTML = "";
        productos.map(producto => {
            const tr = document.createElement('tr')
            
            tr.innerHTML = `
            <td>  ${ producto.title }</td>
            <td> ${ producto.price }</td>
            <td> <img width="50" src="${ producto.thumbnail }" alt=""> </td>
        `

        tabla_productos.appendChild(tr)
        })

    })


    const form = document.getElementById("form")

    form.addEventListener("submit", (e) => {
        e.preventDefault()

        const formData = new FormData(form);

        let json = {};
        formData.forEach((value, key) => { json[key] = value });

        fetch('/api/productos', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(json),
        })
            .then(response => response.json())
            .then(function (json) {
                if (json.status == "ok") {
                    location.href = "/productos";
                }
            })
            .catch(function (err) {
                console.log(err);
            });
    })

        const mensajeForm = document.getElementById("mensajeForm")

    mensajeForm.addEventListener("submit", (e) => {
        e.preventDefault()

      let json = {};
        formData.forEach((value, key) => { json[key] = value });
        socket.emit("enviarMensaje", JSON.stringify(json))

    })
</script>
